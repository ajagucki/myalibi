<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="50dip"
    >

    <ImageView android:id="@+id/current_category_image" android:src="@drawable/category_work"
	           android:layout_width="wrap_content" 
	           android:layout_height="wrap_content"
	           android:paddingBottom="16dip" />

	<TextView android:id="@+id/current_start_time_label" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:text="@string/event_started"
				android:textSize="@dimen/text_sp"
				android:paddingBottom="10dip"/>

    <TextView android:id="@+id/gps_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finding_location"
            android:textSize="@dimen/text_sp"
            android:paddingBottom="10dip"/>

    <Button android:id="@+id/stop" 
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:width="140dip"
		android:height="70dip"
		android:text="@string/stop_event_button"
		android:textSize="18sp"
		android:textStyle="bold"/>
		
</LinearLayout>
